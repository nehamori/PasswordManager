<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.Pages.LoginPage"
             Title="Вход">

    <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" MaximumWidthRequest="450">
        <ContentView x:Name="LoginForm"/>
        
        <Label 
            Text="Методы авторизации"/>
        <Button 
            x:Name="PinCodeButton"
            Text="Пин-код"
            Clicked="PinCodeMethodClicked"/>
        <Button 
            x:Name="MasterPasswordButton"
            Text="Мастер-пароль" 
            Clicked="MasterPasswordMethodClicked"/>
        <Button 
            x:Name="BiometricButton"
            Text="Биометрия" 
            Clicked="BiometricMethodClicked"/>
    </VerticalStackLayout>
</ContentPage>
