<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PasswordManager"
             x:Class="PasswordManager.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="SurfaceColor">#222244</Color>
            <Color x:Key="PrimaryColor">#720020</Color>
            <Color x:Key="ShadowColor">#000000</Color>

            <SolidColorBrush x:Key="ShadowBrush" Color="{StaticResource ShadowColor}" />

            <Shadow x:Key="MaterialShadow_Card"
                Brush="{StaticResource ShadowBrush}"
                Offset="0,4"
                Radius="12"
                Opacity="0.18" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
